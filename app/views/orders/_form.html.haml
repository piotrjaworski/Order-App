.modal-header
  %h1
    = order.new_record? ? "New order" : "Edit #{order.short_info}"
= simple_form_for order, class: 'clearfix', remote: true do |f|
  .modal-body
    = f.input :short_info, input_html: { class: 'form-control' }, label: 'Order'
    = f.input :restaurant_id, input_html: { class: 'form-control' }, label: 'Restaurant', collection: @restaurants
    = f.input :price, input_html: { class: 'form-control' }, label: 'Price'
  .modal-footer
    = f.submit 'Order', class: 'btn btn-primary'

