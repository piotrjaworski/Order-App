.modal-header
  %h1 Nowe zamowienie
= simple_form_for @order, class: 'clearfix' do |f|
  .modal-body
    = f.input :short_info, input_html: { class: 'form-control' }
    = f.input :restaurant, input_html: { class: 'form-control' }
    = f.input :price, input_html: { class: 'form-control' }
  .modal-footer
    = f.submit 'Zamow', class: 'btn btn-primary'

