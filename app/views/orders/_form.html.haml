.modal-header
  %h1
    = order.new_record? ? "Nowe zamowienie" : "Edytuj #{order.short_info}"
= simple_form_for order, class: 'clearfix', remote: true do |f|
  .modal-body
    = f.input :short_info, input_html: { class: 'form-control' }, label: 'Zamowienie'
    = f.input :restaurant, input_html: { class: 'form-control' }, label: 'Restauracja', collection: Order::RESTAURANT
    = f.input :price, input_html: { class: 'form-control' }, label: 'Cena'
  .modal-footer
    = f.submit 'Zamow', class: 'btn btn-primary'

