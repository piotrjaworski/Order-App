.modal-header
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
  %h1
    Order #
    = order.id
.modal-body
  %p
    %span.bold Who ordered:
    = order.user.name
  %p
    %span.bold Restaurant:
    = order.restaurant.name
  - if order.short_info.present?
    %p
      %span.bold Details:
      = order.short_info
  %p
    %h4 Products:
    - order.products.each do |product|
      \-
      %span.bold= product.name
      \-
      %span.error= number_to_currency(product.price, unit: "zł", separator: ",", delimiter: "", format: "%n %u")
      %br
.modal-footer
  %h3
    Total to pay:
    %span.price-total= number_to_currency(count_price(order), unit: "zł", separator: ",", delimiter: "", format: "%n %u")

