= render partial: 'header_history'
.container
  - if current_user.orders.empty?
    %span.text-warning There are no orders!
  - else
    %table.table.table-hover.table-border
      %thead
        %tr
          %th.span3 Zamowienie
          %th.span3 Restauracja
          %th.span3 Do zaplaty
      %tbody
        - current_user.orders.each do |order|
          %tr
            %td.span3= order.short_info
            - if order.restaurant
              %td.span3= order.restaurant.name
            - else
              %td.span3
                %span.error Restaurant which has been deleted!
            %td.span3= number_to_currency(order.price, unit: "zl", separator: ",", delimiter: "", format: "%n %u")
    %p
      .sum= number_to_currency(@sum, unit: "zl", separator: ",", delimiter: "", format: "%n %u")
      .all Razem wydales: &nbsp
