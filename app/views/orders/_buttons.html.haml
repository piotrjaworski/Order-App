- if user_signed_in? && @today_orders.exists?
  - if @today_call.nil? && @today_call.first.user_id == current_user.id
    = button_to "Cancel your call!", call_path(Call.last), class: 'btn btn-inverse order-now', method: :delete, data: { confirm: "Are you sure that you want to cancel your call?!" }
    %br
  - elsif @today_call.exists?
    = button_to "#{@today_call.first.user.name} already called! \nDelivery estimated time: #{@today_call.first.delivery_time} minutes.", new_call_path, class: 'btn btn-success order-now', disabled: true, method: :get
    %br
    %br
  - else
    = button_to "Call and order now!", new_call_path, class: 'btn btn-success order-now', data: { confirm: "Are you sure that you want to call and order today?"}, remote: true, method: :get
    %br
  = button_to "I collect today money!", '#', class: 'btn btn-success order-now', data: { confirm: "Are you sure that you want to collect money today?"}, method: :get
  = link_to "Generate Orders as PDF", orders_path(@today_orders, format: "pdf"), class: 'btn btn-danger', target: "_blank"
