#google-address{:onmouseover => "initialize()"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
    %h1
      = restaurant.new_record? ? "New restaurant" : "Edit #{restaurant.name}"
  = simple_form_for restaurant, class: 'clearfix', remote: true do |f|
    .modal-body
      = f.input :name, input_html: { class: 'form-control' }, label: 'Name', required: false
      = f.input :short_info, input_html: { class: 'form-control' }, label: 'Short info', required: false
      = f.input :restaurant_type, input_html: { class: 'form-control' }, label: 'Type', collection: Restaurant::TYPES, required: false
      = f.input :address, input_html: { id: "autocomplete", placeholder: "Enter an address", class: "address_input" }, label: 'Address', required: false
    .modal-footer
      %a.btn{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Close
      = f.submit 'Submit', class: 'btn btn-primary'

