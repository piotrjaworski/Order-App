%table.table.table-bordered
  %thead
    %tr
      %th
        = "#{@user.name} stats:"
  %tbody
    %tr
      %td
        %strong Restaurants added:
      %td= @user.restaurants.count
    %tr
      %td
        %strong Orders made:
      %td= @user.orders.count
    %tr
      %td
        %strong Last order:
      %td= @user.orders.last.created_at.strftime("%d/%m/%Y at %H:%M") if @user.orders.present?
    %tr
      %td
        %strong Total spend:
      %td= number_to_currency(count_total_price(@user.orders), unit: "zÅ‚", separator: ",", delimiter: "", format: "%n %u")
